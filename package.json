{
  "name": "fhevm-toolkit",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK and examples for building confidential dApps",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev": "npm run dev --workspace=examples",
    "dev:cultural": "npm run dev --workspace=examples/cultural-crowdfunding",
    "dev:nextjs": "npm run dev --workspace=examples/nextjs-showcase",
    "install:all": "npm install && npm install --workspaces",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "zama",
    "ethereum",
    "privacy",
    "confidential",
    "sdk",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
